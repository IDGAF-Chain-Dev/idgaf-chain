{
  "name": "idgaf-chain",
  "version": "1.0.0",
  "description": "IDGAF Chain - Layer 2 on Monad",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "node": "hardhat node",
    "node:idgaf": "hardhat node --port 8546 --chain-id 10144",
    "deploy:l1": "hardhat run scripts/deploy-l1.ts --network monad",
    "deploy:l2": "hardhat run scripts/deploy-l2.ts --network idgaf",
    "relayer": "ts-node relayer/index.ts",
    "relayer:start": "ts-node relayer/index.ts",
    "frontend:serve": "cd frontend && python -m http.server 8000 || python3 -m http.server 8000",
    "frontend:dev": "cd frontend && npm run dev",
    "test:integration": "hardhat run scripts/integration-test.ts",
    "status": "hardhat run scripts/check-bridge-status.ts",
    "api:start": "cd api && npm start",
    "api:dev": "cd api && npm run dev",
    "deploy:railway": "cd cloud-deploy && railway up",
    "deploy:render": "node cloud-deploy/deploy-render-auto.js",
    "deploy:render:help": "powershell -ExecutionPolicy Bypass -File cloud-deploy/deploy-render-simple.ps1",
    "upload:dockerfile": "node cloud-deploy/upload-dockerfile.js",
    "deploy:flyio": "cd cloud-deploy && fly deploy"
  },
  "keywords": [
    "blockchain",
    "layer2",
    "monad",
    "idgaf"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/node": "^20.10.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.9.0"
  }
}
